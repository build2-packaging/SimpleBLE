import libs = libsimpleble%lib{simpleble}

example_dirs = \
    connect \
    connect_safe \
    list_adapters \
    notify \
    notify_multi \
    read \
    scan \
    write

for example: $example_dirs
{
    exe{$(example)_example}: cxx{$example/*} {cxx hxx}{common/*}
    exe{$(example)_example}: $libs
    ./: exe{$(example)_example}
}
